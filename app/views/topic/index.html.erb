<!-- メニュー選択のタブ部分 -->
<!-- TODO 携帯から見た際は幅全部を使いたい -->
<!-- TODO PCから見た際はサイドバーにしたい -->
<ul class="nav nav-tabs">
  <!-- 登録ボタンは携帯では画面表示上常に左下に表示する -->
  <!-- TODO style の直書きをやめる -->
  <!-- TODO hover 時のスタイルがtabのスタイルになってしまっているのを通常のボタンのスタイルを適用する -->

  <li style="display: block; position: fixed; bottom: 1.2em; left: 1em;">
    <%= link_to sanitize('<span class="glyphicon glyphicon-pencil"></span> 登録'), "/financial_transaction/new", class: "btn btn-primary" %>
  </li>
  <li class="active"><a href="#"><span class="glyphicon glyphicon-list-alt"></span> 履歴</a></li>
  <li><a href="#"><span class="glyphicon glyphicon-check"></span> 棚卸し</a></li>
  <li><a href="#"><span class="glyphicon glyphicon-time"></span> 集計</a></li>
  <li><a href="#"><span class="glyphicon glyphicon-wrench"></span> 設定</a></li>
</ul>

<div class="container-fluid">
  <div class="row" style="min-height: 320px;">
    <section class="history">
      <table class="table table-striped table-bordered">
        <thead>
          <th>日時</th>
          <th>費用 or 資産</th>
          <th>金額</th>
        </thead>
        <tbody>
          <!-- 履歴を表示します -->
        </tbody>
      </table>
    </section>
  </div><!--/row-->
</div> <!-- /container -->

<div ng-cloak class="entry-forms">
  <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.2)" ></div>
  <div class="container-fluid" style="position: absolute; top: 0; left: 0; width: 100%;">
    <div class="row">
      <div class="col-xs-12" style="margin-top: 12px;">
        <div style="background: #fff; padding: 24px 0; border-radius: 4px;">
          <form class="form-horizontal col-xs-offset-1">
            <fieldset>
              <legend>登録</legend>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="datetime">日付</label>
                <div class="col-sm-8">
                  <input name="datetime" type="datetime" placeholder="日付"/>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">金額</label>
                <div class="col-sm-8">
                  <input name="amount" type="number" placeholder="金額"/>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">購入課目</label>
                <div class="col-sm-8">
                  <input name="debit-account" type="text" placeholder="購入課目"/>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">支払課目</label>
                <div class="col-sm-8">
                  <input name="credit-account" type="text" placeholder="支払課目"/>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-8">
                  <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-pencil"></span> 登録</button>
                  <button class="btn btn-default" type="button">キャンセル</button>
                </div>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
