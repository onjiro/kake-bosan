<style>
  #entry-form {
  margin-bottom: 24px;
  }

  #entry-form .row {
  margin-top: 8px;
  }

  .entries-group {
  float: none;
  }

  .entries-group .separator {
  text-align: center;
  border-color: transparent;
  box-shadow: none;
  }
  
  @media (max-width: 768px) {
  .entries-group {
  letter-spacing: -.40em;
  }
  .entries-group .input-group {
  display: inline-table;
  }
  .entries-group [name="credit-account"],
  .entries-group [name="debit-account"] {
  margin: 0;
  padding: 0;
  display: inline-block;
  width: 41.6666666666%;
  }
  .entries-group .separator {
  margin: 0;
  padding: 0;
  display: inline-block;
  width: 16.6666666666%;
  }
  }
</style>

<div class="container-fluid">
  <form id="entry-form" class="form-inline" ng-submit="addNewTransaction()">
    <fieldset>

      <legend class="hidden-xs">▼ 登録</legend>

      <!-- トランザクションに1つ -->
      <!-- 取引時刻 -->
      <div class="row">
        <span class="col-sm-3">
          <span class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
            <input name="date" class="form-control"
                   type="date" placeholder="日付"
                   ng-model="newTransaction.date" />
          </span>
        </span>
      </div>

      <!-- トランザクションに1〜複数 -->
      <div class="row">

        <!-- 取引金額 -->
        <span class="entries-group col-sm-3">
          <span class="input-group">
            <span class="input-group-addon">&yen;</span>
            <input name="amount" class="form-control" style="text-align: right;"
                   type="number" placeholder="金額"
                   ng-model="newTransaction.entries_attributes[0].amount"
                   ng-change="newTransaction.entries_attributes[1].amount = newTransaction.entries_attributes[0].amount"/>
          </span>
        </span>
          
        <!-- 取引科目 -->
        <span class="entries-group col-sm-8">
          <span class="form-group">
            <select name="account-transition-type-selection" class="form-control">
              <option>【科目フィルタ】</option>
              <option>費用 ◀ 資産</option>
              <option>資産 ◀ 資産</option>
            </select>

            <select name="debit-account" class="form-control"
                    ng-model="newTransaction.entries_attributes[0].item_id">
              <option value="0">【借方】</option>
              <option ng-repeat="item in items" value="{{ item.id }}">{{ item.name }}</option>
            </select>

            <span class="separator form-control">◀</span>

            <select name="credit-account" class="form-control"
                    ng-model="newTransaction.entries_attributes[1].item_id">
              <option value="0">【貸方】</option>
              <option ng-repeat="item in items" value="{{ item.id }}">{{ item.name }}</option>
            </select>
          </span>
        </span>

      </div>

      <!-- フォームに1つ -->
      <div id="entry-form-control" class="row">
        <div class="col-sm-12">
          <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-pencil"></i> 登録 </button>
          <button ng-click="toggleEntryForm()" class="btn btn-default" type="button">キャンセル</button>
        </div>
      </div>

    </fieldset>
  </form>
</div>
